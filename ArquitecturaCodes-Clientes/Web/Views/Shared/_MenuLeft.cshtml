@using Framework.Utils
@using Framework.Common

@section scripts{
    <script type="text/javascript" src="~/js/account/logout.js" asp-append-version="true"></script>
}

<v-navigation-drawer v-model="drawer"
                     width="360"
                     class="mx-auto"
                     app
                     dense
                     dark
                     temporary
                     style="background: linear-gradient(to top, #4074a5, #6492bd, #4074a5);">
    <v-list>
        <v-list-item>
            <v-list-item-content>
                <v-list-item-title class="text-h6" style="cursor:pointer;">
                    <a class="menu-left-links" href="/Home/Index">
                        {{jsglobals.MenuARQ}}
                    </a>
                </v-list-item-title>
            </v-list-item-content>
        </v-list-item>
    </v-list>
    <v-divider></v-divider>

    <v-list nav
            dense>
        <v-list-item-content>
            <v-list-item-group v-model="group"
                               active-class="white deep-purple--text">

                <v-list-item>
                    <a class="menu-left-links" href="/Funcionalidad/Listado">
                        <v-list-item-icon>
                            <v-icon class="material-icons-outlined">
                                list_alt
                            </v-icon>
                        </v-list-item-icon>
                        <v-list-item-title style="font-size:0.9rem;">Funcionalidades</v-list-item-title>
                    </a>
                </v-list-item>

                <v-list-item>
                    <a class="menu-left-links" href="/Cliente/Listado">
                        <v-list-item-icon>
                            <v-icon class="material-icons-outlined">
                                fence
                            </v-icon>
                        </v-list-item-icon>
                        <v-list-item-title style="font-size:0.9rem;">Clientes</v-list-item-title>
                    </a>
                </v-list-item>

                <v-list-item>
                    <span v-on:click="onClickCerrarSesion()" style="display:flex;width:100%;">
                        <v-list-item-icon>
                            <span class="material-icons-outlined">
                                logout
                            </span>
                        </v-list-item-icon>
                        <v-list-item-title style="font-size:0.9rem;" v-on:click="onClickCerrarSesion()">{{jsglobals.Salir}}</v-list-item-title>
                    </span>
                </v-list-item>
            </v-list-item-group>
        </v-list-item-content>
    </v-list>
</v-navigation-drawer>